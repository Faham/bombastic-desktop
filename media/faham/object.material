material BombasticDesktop/Icon/Base
{
	receive_shadows off
	
	technique
	{
		pass
		{
			//scene_blend alpha_blend
			//depth_write off
			ambient $color
			diffuse $color
			specular $color
	
			texture_unit
			{
				texture $texture_file
			}
		}
	}
}

//------------------------------------------------------------------------------

material BombasticDesktop/Icon/Freeze : BombasticDesktop/Icon/Base
{
	set $texture_file ubuntu-folder-gray.png
}

//------------------------------------------------------------------------------

material BombasticDesktop/Icon/Folder : BombasticDesktop/Icon/Base
{
	set $texture_file ubuntu-folder-yellow.png
}

material BombasticDesktop/Icon/Folder/Highlight : BombasticDesktop/Icon/Folder
{
	set $color "1.0 1.0 0.25"
}

//------------------------------------------------------------------------------

material BombasticDesktop/Icon/Image : BombasticDesktop/Icon/Base
